{
  "env": {
    "browser": true,
  },
  "extends": [
    "airbnb/base"
  ],
  "rules": {
    "arrow-parens": ["error", "always"],
    "semi": ["error", "never"],
    "comma-dangle": "off",
    "new-cap": "off",
    "capitalized-comments": "off",
    "no-confusing-arrow": "off",
    "global-require": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "import/no-extraneous-dependencies": "off",
    "import/newline-after-import": "off"
  },
}
